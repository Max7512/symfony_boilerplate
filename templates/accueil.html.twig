{% extends "base.html.twig" %}
{% trans_default_domain 'accueil' %}
{% block title %}
	{{ parent() }}
	|
	{{ 'titre'|trans }}
{% endblock %}
{% block body %}
	<div class="colonne-centre recherche-div">
		<input type="text" id="rechercheInput" name="recherche" placeholder="{{ 'recherche'|trans }}" value="{{ search }}">
	</div>
	<div class="vinyles">
		{% for vinyle in vinyles %}
			<span class="vinyle-layout">
				<a href={{ path("vinyle", { "id": vinyle.getId() } ) }}>
					<div class="conteneur colonne-centre">
						<h1>{{ vinyle.getName() }}</h1>
						<h2>{{ vinyle.getAuthor().getName() }}</h2>
						<img src="{{ vinyle.getImage().getUrl() }}" alt="{{ vinyle.getName() }}">
						<label>{{ 'prix_label'|trans }}
							{{ vinyle.getPrice() }}
							â‚¬</label>
					</div>
				</a>
			</span>
		{% endfor %}
	</div>
{% endblock %}
