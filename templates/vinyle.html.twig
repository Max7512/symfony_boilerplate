{% trans_default_domain 'vinyle' %}
{% extends "base.html.twig" %}
{% block title %}
	{{ vinyle.getName() }}
{% endblock %}

{% block body %}
	<section class="vinyle-section">
		<article class="vinyle-article conteneur colonne-centre">
			<h1>{{ vinyle.getName() }}</h1>
			<h2>{{ vinyle.getAuthor() }}</h2>
			<img src="{{ vinyle.getImage().getUrl() }}" alt="{{ vinyle.getName() }}">
			<label>{{ 'prix_label'|trans }}
				{{ vinyle.getPrice() }}
				â‚¬</label>
			<p>{{ vinyle.getDescription() }}</p>
		</article>

		<article class="vinyle-panier conteneur colonne-centre">
			{{ form_start(addToCartForm) }}
			<h1>{{ 'formulaire.titre'|trans }}</h1>
			{{ form_errors(addToCartForm) }}
			{{ form_row(addToCartForm.quantity, {
				label: "formulaire.quantite"|trans
			}) }}
			<button type="submit" class="btn">{{ 'formulaire.bouton_submit'|trans }}</button>
			{{ form_end(addToCartForm) }}
		</article>
	</section>
{% endblock %}
