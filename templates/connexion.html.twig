{% trans_default_domain 'connexion' %}
{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	| {{ 'titre'|trans }}
{% endblock %}

{% block body %}
	<form method="post" class="conteneur colonne-centre">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				{{ 'connecte_en_tant_que'|trans }} {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">{{ 'lien_deconnexion'|trans }}</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">{{ 'formulaire.titre'|trans }}</h1>
		<label for="username">{{ 'formulaire.email_label'|trans }}</label>
		<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
		<label for="password">{{ 'formulaire.mot_de_passe_label'|trans }}</label>
		<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

		<div class="checkbox mb-3">
			<input type="checkbox" name="_remember_me" id="remember_me">
			<label for="remember_me">{{ 'formulaire.se_souvenir_de_moi_label'|trans }}</label>
		</div>

		<button class="btn btn-lg btn-primary" type="submit">
			{{ 'formulaire.bouton_submit'|trans }}
		</button>
	</form>
{% endblock %}
