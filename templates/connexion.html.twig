{% trans_default_domain 'connexion' %}
{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	|
	{{ 'titre'|trans }}
{% endblock %}

{% block body %}
	<div class="colonne-centre">
		<form method="post" class="conteneur colonne-centre connexion-inscription">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal">{{ 'formulaire.titre'|trans }}</h1>
			<div>
				<label for="username">{{ 'formulaire.email_label'|trans }}</label>
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
			</div>
			<div>
				<label for="password">{{ 'formulaire.mot_de_passe_label'|trans }}</label>
				<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
			</div>

			<div class="checkbox mb-3">
				<label for="remember_me">{{ 'formulaire.se_souvenir_de_moi_label'|trans }}</label>
				<input type="checkbox" name="_remember_me" id="remember_me">
			</div>

			<button class="btn btn-lg btn-primary" type="submit">
				{{ 'formulaire.bouton_submit'|trans }}
			</button>
			<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
		</form>
	</div>
{% endblock %}
